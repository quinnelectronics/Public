https://github.com/linux-surface/linux-surface/wiki/Installation-and-Setup



wget -qO - https://raw.githubusercontent.com/linux-surface/linux-surface/master/pkg/keys/surface.asc \
    | gpg --dearmor | sudo dd of=/etc/apt/trusted.gpg.d/linux-surface.gpg

echo "deb [arch=amd64] https://pkg.surfacelinux.com/debian release main" \
	| sudo tee /etc/apt/sources.list.d/linux-surface.list

sudo apt update

sudo apt install linux-image-surface linux-headers-surface libwacom-surface iptsd

sudo apt install linux-surface-secureboot-mok

sudo update-grub

curl -s https://raw.githubusercontent.com/linux-surface/linux-surface/master/pkg/keys/surface.asc \
    | sudo pacman-key --add -



#not working

# Add the repository
curl -sSL https://packages.surface-go.info/keys.asc | sudo apt-key add -
echo "deb [arch=amd64] https://packages.surface-go.info/ubuntu focal main" | sudo tee /etc/apt/sources.list.d/linux-surface.list

# Update and install the packages
sudo apt update
sudo apt install linux-surface
